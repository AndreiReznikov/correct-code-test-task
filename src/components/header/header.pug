include ~components/logo/logo
include ~components/button/button

mixin header()
  -
    const data = require('./data/data.json');

  header.header
    .header__wrapper
      .header__left-block
        +logo({ href: 'landing-page.html' })
      .header__right-block
        nav.header__nav
          ul.header__nav-list
            each item in data.menuItems
              - const { name, link } = item;
                li.header__nav-item
                  a.header__nav-link(href=link)
                    span.header__nav-item-name=name
        .header__button-container
          +button({ text: 'Купить билеты' })
        .header__burger-container
          .header__burger